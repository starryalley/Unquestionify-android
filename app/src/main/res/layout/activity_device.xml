
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="au.idv.markkuo.android.apps.messagespng.MainActivity" >

    <LinearLayout
        android:id="@+id/deviceinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:weightSum="2">

        <TextView
            android:id="@+id/devicename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/devicestatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_weight="1"/>
    </LinearLayout>

    <View
        android:id="@+id/dividerA"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_below="@id/deviceinfo"
        android:layout_marginTop="5dip"
        android:background="#cdcdcd" />

    <TextView
        android:id="@+id/taptosend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:layout_marginLeft="5dip"
        android:layout_below="@id/dividerA"
        android:text="@string/tap_to_send"/>

    <View
        android:id="@+id/dividerB"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_below="@id/taptosend"
        android:layout_marginTop="5dip"
        android:background="#cdcdcd" />

    <TextView
        android:id="@+id/openapp"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginTop="5dip"
        android:layout_marginLeft="5dip"
        android:layout_below="@id/dividerB"
        android:gravity="center_vertical"
        android:text="@string/open_app_open"/>

    <View
        android:id="@+id/dividerC"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_below="@id/openapp"
        android:layout_marginTop="5dip"
        android:background="#cdcdcd" />

    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/dividerC" />

    <TextView
        android:id="@android:id/empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

</RelativeLayout>
